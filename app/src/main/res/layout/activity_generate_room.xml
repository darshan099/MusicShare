<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uniqueKeyGen"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/radiobuttonGroupRoomId"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:checked="false"
            android:layout_height="wrap_content"
            android:id="@+id/radiobuttonCreateRoom"
            android:text="Create Room"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:checked="true"
            android:layout_height="wrap_content"
            android:id="@+id/radiobuttonJoinRoom"
            android:text="Join Room"/>
    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Room Id"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible"
        android:id="@+id/enterRoomId"/>
    <TextView
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:id="@+id/generateRoomId"/>
    <TextView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="@string/roomcreate"
        android:visibility="gone"
        android:id="@+id/room_create_hint"/>
    <TextView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="@string/roomjoin"
        android:id="@+id/room_join_hint"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitRoomId"/>
</LinearLayout>